#version 410
in vec2 pos;
out vec4 fragColor;

uniform sampler2D colormap;
uniform vec2 direction;

float weights[5] = float[]( 0.2270270270/2, 0.1945945946, 0.1216216216,
                                    0.0540540541, 0.0162162162 );

void main()
{
  fragColor = vec4(0,0,0,1);
  for (int i = 0; i<5; ++i)
  {
    fragColor.rgb += textureLod(colormap, pos+0.001*i*direction, 0).rgb * weights[i];
    fragColor.rgb += textureLod(colormap, pos-0.001*i*direction, 0).rgb * weights[i];
  }
}
